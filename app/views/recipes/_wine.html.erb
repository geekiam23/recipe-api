<div class="py-5">
  <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
    <div class="sm:col-span-2">
      <dt class="text-sm font-medium text-gray-500">Wine</dt>
      <a href="{product?.link}" class="mt-1 text-sm text-gray-900">
        {product?.title}
      </a>
    </div>
    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">
        Average Rating
      </dt>
      <dd class="mt-1 text-sm text-gray-900">
        {product?.averageRating.toFixed(2)}
      </dd>
    </div>
    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">
        Number of Reviews
      </dt>
      <dd class="mt-1 text-sm text-gray-900">
        {product?.ratingCount}
      </dd>
    </div>
    <div class="sm:col-span-1">
      <dt class="text-sm font-medium text-gray-500">Price</dt>
      <dd class="mt-1 text-sm text-gray-900">{product?.price}</dd>
    </div>
    <div class="sm:col-span-2">
      <dt class="text-sm font-medium text-gray-500">
        Desciption
      </dt>
      <dd class="mt-1 text-sm text-gray-900">
        {product?.description}
      </dd>
    </div>
  </dl>
</div>