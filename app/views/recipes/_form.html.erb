<%= form_for @recipe do |f| %>
  <% if @recipe.errors.any? %>
    <div class="">
      <h4><%= pluralize(@recipe.errors.count, "error") %>.</h4>
        <ul>
          <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', placeholder: "Enter recipe title" %>

  <%= f.label :summary %>
  <%= f.text_area :summary, rows: 8, class: 'form-control', placeholder: "Enter recipe summary" %>

  <%= f.label :servings, class: 'form-control' %>
  <%= f.number_field :servings, in: 1.0..10.0, step: 1.0 %>

  <%= f.label :instructions %>
  <%= f.text_area :instructions, rows: 8, class: 'form-control', placeholder: "Enter recipe instructions" %>

   <div class="">
     <%= f.submit "Save", class: '' %>
   </div>
<% end %>